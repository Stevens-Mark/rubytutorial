
<h1>Friends List</h1>

<table class="table table-striped table-hover table-bordered" id="friends">
  <thead class="table-dark">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Twitter</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show', friend, class:"text-decoration-none" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend), class:"text-decoration-none" %></td>
        <td><%= link_to "Destroy", friend, class:"text-decoration-none",
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Add New Friend', new_friend_path, class:"btn btn-secondary" %>
