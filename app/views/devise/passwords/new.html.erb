<div class="card text-bg-light mt-3 mb-3"">
  <h2 class="card-header">Forgot your password?</h2>
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: {turbo: false} }) do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form-group mb-3">
        <%# <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Email Address"  %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: "btn btn-warning mt-2" %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex">
  <%= render "devise/shared/links" %>
</div>
